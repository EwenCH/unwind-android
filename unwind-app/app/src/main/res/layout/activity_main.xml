<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unwind.unwind.solutions.unwind.MainActivity">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="213dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/text_input_hint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/responseList"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:text="@string/send_button_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputText"
        app:layout_constraintStart_toStartOf="@+id/inputText" />

    <ListView
        android:id="@+id/responseList"
        android:layout_width="0dp"
        android:layout_height="622dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/inputText" />
</android.support.constraint.ConstraintLayout>
